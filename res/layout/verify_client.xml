<?xml version="1.0" encoding="utf-8"?>
 
 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo" >

     <RelativeLayout
        android:id="@+id/buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left|top"
        android:orientation="horizontal" >

      

        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="retornar"
        android:src="@drawable/regresar" />

           <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/modificar_titulo" />
    </RelativeLayout>

       
    
  
    <EditText
        android:id="@+id/campoCheckPasword"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txttitle"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dip"
        android:textSize="15sp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/campoCheckPasword"
        android:layout_marginTop="27dp"
        android:onClick="botonCheckClient"
        android:src="@drawable/siguiente" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logo_pequeno" />

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonlayout"
        android:gravity="center"
        android:text="Ingrese su contraseÃ±a"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp" />

</RelativeLayout>
