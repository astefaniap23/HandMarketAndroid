<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo" >

    	<RelativeLayout
        android:id="@+id/buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left|top"
        android:orientation="horizontal" >
        
    

         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="retornar"
        android:src="@drawable/regresar" />

           <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
              android:src="@drawable/modificar_titulo" />

          </RelativeLayout>
          
     <ScrollView
         android:id="@+id/mainScrollView"
         android:layout_width="match_parent"
         android:layout_height="400dp"
         android:layout_alignParentBottom="true"
         android:layout_below="@+id/buttonlayout" >

         <LinearLayout
             android:id="@+id/linearLayout1"
             android:layout_width="match_parent"
             android:layout_height="502dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/buttonlayout"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/TextView04"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:text="Nombre"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="15sp" />

             <EditText
                 android:id="@+id/campoNombreMod"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/campo"
                 android:ems="10"
                 android:padding="5dip"
                 android:textSize="13sp" >

                 <requestFocus />
             </EditText>

             <TextView
                 android:id="@+id/TextView03"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:text="Apellido"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="15sp" />

             <EditText
                 android:id="@+id/campoApellidoMod"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/campo"
                 android:padding="5dip"
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:text="Contraseña"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="15sp" />

             <EditText
                 android:id="@+id/campoContrasenaMod"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/campo"
                 android:inputType="textPassword"
                 android:padding="5dip"
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/textView6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:text="Direccion"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="15sp" />

             <EditText
                 android:id="@+id/campoDireccionMod"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/campo"
                 android:padding="5dip"
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/TextView02"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:text="Teléfono"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="15sp" />

             <EditText
                 android:id="@+id/campoTelefonoMod"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/campo"
                 android:padding="5dip"
                 android:inputType="number"
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:text="Correo electronico"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="15sp" />

             

             <EditText
                 android:id="@+id/campoCorreoMod"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/campo"
                 android:inputType="textEmailAddress"
                 android:padding="5dip"
                 android:textSize="13sp" />

             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="26dp"
                 android:layout_marginTop="20dp"
                 android:layout_weight="0.09"
                 android:onClick="botonGuardarModificacionUsuario"
                 android:src="@drawable/siguiente" />
         </LinearLayout>

     </ScrollView>

</RelativeLayout>

