<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo"
    android:gravity="fill" >

    <RelativeLayout
        android:id="@+id/buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left|top"
        android:orientation="horizontal" >

      

        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="retornar"
        android:src="@drawable/regresar" />

           <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/nuevo_registro" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/buttonlayout" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="1179dp"
        android:layout_above="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonlayout"
        android:orientation="vertical" >
	 
        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/campoNombreNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/campo"
            android:ems="10"
            android:padding="5dip"
            android:textSize="13sp" >
            
                        <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/campoApellidoNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:ems="10"
            android:textSize="13sp"
			android:background="@drawable/campo"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
            android:padding="5dip" />

        <TextView
            android:id="@+id/textView20"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

        <RadioGroup
            android:id="@+id/radioGroupSexo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <RadioButton
                android:id="@+id/masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Masculino            "
                android:button="@drawable/checkbox_selector"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:text="Femenino"
                android:textSize="13dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/campoUsuarioNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:ems="10"
            android:textSize="13sp" 
            android:background="@drawable/campo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dip" />

        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/campoContrasenaNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/campo"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="5dip"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/campoDireccionNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:ems="10"
            android:textSize="13sp"
            android:background="@drawable/campo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dip" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

        

        <EditText
            android:id="@+id/campoTelefonoNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@drawable/campo"
            android:ems="10"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo electronico"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/campoCorreoNuevo"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="13sp"
            android:background="@drawable/campo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dip" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="24dp"
            android:onClick="enviarNuevoUsuario"
            android:layout_marginTop="10dp"
            android:src="@drawable/registrar" />
    </LinearLayout>
 </ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="23dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

