<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
       	  android:id="@+id/gris"
          android:layout_width="wrap_content"
          android:layout_height="52dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:background="@drawable/barra_gris" >
    <ImageView
          android:id="@+id/item_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="22dp"
          android:adjustViewBounds="false"
      	  
      	  android:layout_marginTop="5dp"
          android:scaleType="centerInside" />
        
   <TextView
       android:id="@+id/item_precioMake"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/item_nombreMake"
       android:layout_below="@+id/item_nombreMake"
       android:onClick="detailsButtonWishList"
       android:text="Precio maker"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textSize="11sp" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:textSize="0sp"
       android:visibility="invisible" />

          <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/checkBox1"
              android:layout_alignBottom="@+id/checkBox1"
              android:layout_marginLeft="32dp"
              android:layout_toRightOf="@+id/item_nombreMake"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textSize="0sp"
              android:visibility="invisible" />

          <TextView
              android:id="@+id/item_nombreMake"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@+id/checkBox1"
              android:layout_marginLeft="30dp"
              android:layout_toRightOf="@+id/item_icon"
              android:onClick="detailsButtonWishList"
              android:text="Nombre maker"
              android:textStyle="bold"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="12sp" />
          
          <ImageView
          android:id="@+id/imageView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="5dp"
          android:layout_alignParentBottom="true"
          android:layout_alignBottom="@id/gris"
          android:src="@drawable/separador" />
          <ImageView
              android:id="@+id/imageView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/textView2"
              android:layout_toLeftOf="@+id/checkBox1"
              android:onClick="detailsButtonWishList"
              android:src="@android:color/transparent" />

          <ImageButton
              android:id="@+id/carritoDetalle"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_alignParentRight="true"
              android:layout_alignTop="@+id/checkBox1"
              android:layout_marginRight="15dp"
              android:background="@drawable/boton_carrito"
              android:onClick="carButton" />

          <CheckBox
              android:id="@+id/checkBox1"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@+id/carritoDetalle"
              android:button="@drawable/checkbox_selector"
              android:layout_marginRight="15dp"
              android:checked="false"
              android:clickable="false"
              android:focusable="false" />
          
    </RelativeLayout>
    
</RelativeLayout>