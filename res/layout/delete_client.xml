<?xml version="1.0" encoding="utf-8"?>

 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo_pequeno" />

    <RelativeLayout
        android:id="@+id/buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left|top"
        android:orientation="horizontal" >

      

        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="retornar"
        android:src="@drawable/regresar" />

           <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/confirmar_usuario" />
    </RelativeLayout>

  

    <EditText
        android:id="@+id/campoCheckPasswordDelete"
        android:layout_width="match_parent"
        android:layout_height="30sp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dip"
        android:textSize="13dp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/campoCheckPasswordDelete"
        android:layout_marginTop="26dp"
        android:onClick="botonDeleteAccount"
        android:src="@drawable/eliminar_cuenta" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonlayout"
        android:gravity="center"
        android:text="Ingrese su contraseÃ±a"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp" />

</RelativeLayout>
